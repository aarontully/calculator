<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="350">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblResult"
               Content="0"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Grid.ColumnSpan="4"/>
        <Button x:Name="btnAC"
                Style="{StaticResource funcButtonsStyle}"
                Content="AC"
                Grid.Row="1"/>
        <Button x:Name="btnNegative"
                Style="{StaticResource funcButtonsStyle}"
                Content="+/-" 
                Grid.Row="1"
                Grid.Column="1"/>
        <Button x:Name="btnPercent"
                Style="{StaticResource funcButtonsStyle}"
                Content="%" 
                Grid.Row="1"
                Grid.Column="2"/>
        <Button x:Name="btnDivide"
                Click="btnOperation_Click"
                Style="{StaticResource operatorsButtonsStyle}"
                Content="/" 
                Grid.Row="1"
                Grid.Column="3"/>
        <Button x:Name="btnSeven"
                Click="btnNumber_Click"
                Style="{StaticResource numberButtonsStyle}"
                Content="7" 
                Grid.Row="2"/>
        <Button x:Name="btnEight"
                Click="btnNumber_Click"
                Style="{StaticResource numberButtonsStyle}"
                Content="8" 
                Grid.Row="2"
                Grid.Column="1"/>
        <Button x:Name="btnNine"
                Click="btnNumber_Click"
                Style="{StaticResource numberButtonsStyle}"
                Content="9" 
                Grid.Row="2"
                Grid.Column="2"/>
        <Button x:Name="btnTimes"
                Click="btnOperation_Click"
                Style="{StaticResource operatorsButtonsStyle}"
                Content="*" 
                Grid.Row="2"
                Grid.Column="3"/>
        <Button x:Name="btnFour"
                Click="btnNumber_Click"
                Style="{StaticResource numberButtonsStyle}"
                Content="4" 
                Grid.Row="3"/>
        <Button x:Name="btnFive"
                Click="btnNumber_Click"
                Style="{StaticResource numberButtonsStyle}"
                Content="5" 
                Grid.Row="3"
                Grid.Column="1"/>
        <Button x:Name="btnSix"
                Click="btnNumber_Click"
                Style="{StaticResource numberButtonsStyle}"
                Content="6" 
                Grid.Row="3"
                Grid.Column="2"/>
        <Button x:Name="btnMinus"
                Click="btnOperation_Click"
                Style="{StaticResource operatorsButtonsStyle}"
                Content="-"
                Grid.Row="3"
                Grid.Column="3"/>
        <Button x:Name="btnOne"
                Click="btnNumber_Click"
                Style="{StaticResource numberButtonsStyle}"
                Content="1" 
                Grid.Row="4"/>
        <Button x:Name="btnTwo"
                Click="btnNumber_Click"
                Style="{StaticResource numberButtonsStyle}"
                Content="2" 
                Grid.Row="4"
                Grid.Column="1"/>
        <Button x:Name="btnThree"
                Click="btnNumber_Click"
                Style="{StaticResource numberButtonsStyle}"
                Content="3" 
                Grid.Row="4"
                Grid.Column="2"/>
        <Button x:Name="btnPlus"
                Click="btnOperation_Click"
                Style="{StaticResource operatorsButtonsStyle}"
                Content="+" 
                Grid.Row="4"
                Grid.Column="3"/>
        <Button x:Name="btnZero"
                Click="btnNumber_Click"
                Style="{StaticResource numberButtonsStyle}"
                Content="0" 
                Grid.Row="5"
                Grid.ColumnSpan="2"/>
        <Button x:Name="btnDot"
                Click="btnDot_Click"
                Style="{StaticResource numberButtonsStyle}"
                Content="." 
                Grid.Row="5"
                Grid.Column="2"/>
        <Button x:Name="btnEquals"
                Style="{StaticResource operatorsButtonsStyle}"
                Content="=" 
                Grid.Row="5"
                Grid.Column="3"/>
    </Grid>
</Window>
